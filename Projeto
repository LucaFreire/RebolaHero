###Bibliotecas###

import pygame
from pygame.locals import *
from sys import exit

lista = [50,200]

from random import choice as esc

pygame.init() #Inicía o Programa

#Tamanho da Tela
Largura = 640
Altura = 480

Tela = pygame.display.set_mode((Largura,Altura))
pygame.display.set_caption('Funk Hero') #Nome do Arquivo

x=Largura/2
y=0

x1=0
y1=0
#Mantém a Tela Aberta
while True:
    Tela.fill((0,0,0))
    for event in pygame.event.get():
        if event.type == QUIT:
            pygame.quit()
            exit()
                          #Cor RGB    X  , Y  ,Largura, Altura
    pygame.draw.rect(Tela,(255,0,0), (x,y,40,50)) #Desenha um retângulo

    if y>= Altura:
        y=0
        x= esc(lista)   #esc(5,500)
    y+=0.20

    pygame.display.update()


